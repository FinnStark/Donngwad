cat <<'EOF' > add_titlescreen.patch
diff --git a/ui/TitleScreen.gd b/ui/TitleScreen.gd
new file mode 100644
--- /dev/null
+++ b/ui/TitleScreen.gd
@@
+extends CanvasLayer
+
+@onready var btn_new := $VBoxContainer/BtnNew
+@onready var btn_quit := $VBoxContainer/BtnQuit
+
+func _ready():
+    btn_new.pressed.connect(_on_new_game)
+    btn_quit.pressed.connect(func(): get_tree().quit())
+
+func _on_new_game():
+    get_tree().change_scene_to_file("res://local3d/Colony.tscn")
diff --git a/ui/TitleScreen.tscn b/ui/TitleScreen.tscn
new file mode 100644
--- /dev/null
+++ b/ui/TitleScreen.tscn
@@
+[gd_scene format=3 uid="uid_titlescreen"]
+
+[ext_resource path="res://ui/TitleScreen.gd" type="Script" id=1]
+[ext_resource path="res://assets/donngwad_logo.png" type="Texture2D" id=2]
+
+[node name="TitleScreen" type="CanvasLayer"]
+script = ExtResource("1")
+
+[node name="TextureRect" type="TextureRect" parent="."]
+texture = ExtResource("2")
+stretch_mode = 5
+
+[node name="VBoxContainer" type="VBoxContainer" parent="."]
+anchor_left = 0.5
+anchor_top = 0.5
+anchor_right = 0.5
+anchor_bottom = 0.5
+offset_left = -100.0
+offset_top = -50.0
+offset_right = 100.0
+offset_bottom = 50.0
+alignment = 1
+
+[node name="BtnNew" type="Button" parent="VBoxContainer"]
+text = "Nouvelle Partie"
+
+[node name="BtnQuit" type="Button" parent="VBoxContainer"]
+text = "Quitter"
EOF
